Cmnd_Alias AKITA = /bin/mv /tmp/nginx_akita-nginx.conf /etc/nginx/sites-available/akita-nginx.conf, /bin/ln -fs /etc/nginx/sites-available/akita-nginx.conf /etc/nginx/sites-enabled/akita-nginx.conf, /etc/init.d/nginx reload, /bin/mv /tmp/akita-upstart.conf /etc/init/akita.conf, /usr/sbin/service akita restart

# Cmnd_Alias RAKE = /usr/local/bin/rake

akita ALL = (root) NOPASSWD: AKITA

# allow to become akita user like so $ sudo -u akita -s
# %akitadevs ALL = (akita) NOPASSWD: /bin/bash

%akitadevs ALL = (root) NOPASSWD: /usr/bin/su - akita
