Cmnd_Alias AKITA = /bin/mv /tmp/nginx_akita-nginx.conf /etc/nginx/sites-available/akita-nginx.conf, /bin/ln -fs /etc/nginx/sites-available/akita-nginx.conf /etc/nginx/sites-enabled/akita-nginx.conf, /etc/init.d/nginx reload, /bin/mv /tmp/akita-upstart.conf /etc/init/akita.conf, /usr/sbin/service akita restart, /bin/systemctl reload nginx.service

akita ALL = (root) NOPASSWD: AKITA

# allow to become akita user like so $ sudo -u akita -i
%akitadevs ALL = (akita) NOPASSWD: /bin/bash
